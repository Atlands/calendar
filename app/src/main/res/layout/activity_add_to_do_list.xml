<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddToDoList.AddToDoList">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4fd1b9"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/richeng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/todolist_richeng"
            android:gravity="center"
            android:textColor="@drawable/todolist_bar_text"
            android:text="日  程" />

        <TextView
            android:id="@+id/shengri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/todolist_shengri"
            android:gravity="center"
            android:textColor="@drawable/todolist_bar_text"
            android:text="生  日" />

        <TextView
            android:id="@+id/jinian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/todolist_jinian"
            android:gravity="center"
            android:textColor="@drawable/todolist_bar_text"
            android:text="纪念日" />

        <TextView
            android:id="@+id/daoshu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/todolist_daoshu"
            android:gravity="center"
            android:textColor="@drawable/todolist_bar_text"
            android:text="倒数日" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/add_view_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>